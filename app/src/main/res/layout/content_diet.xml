<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rxrt8.dietanabol.DietActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_diet">

    <TextView
        android:id="@+id/dietTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/days_prompt"
        android:textColor="@color/colorSecondaryText"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/dietSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dietTV"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="@dimen/margin_smaller"
        android:entries="@array/days" />

    <Button
        android:id="@+id/addMealBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dietSpinner"
        android:layout_marginTop="@dimen/margin_bigger"
        android:textColor="@color/colorPrimaryText"
        android:onClick="click"
        android:text="@string/add_meal" />

    <Button
        android:id="@+id/deleteMealBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dietSpinner"
        android:layout_marginTop="@dimen/margin_bigger"
        android:textColor="@color/colorPrimaryText"
        android:onClick="click"
        android:text="@string/delete_meal" />

    <TextView
        android:id="@+id/mealToDeleteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/deleteMealBtn"
        android:layout_marginTop="@dimen/margin_bigger"
        android:textColor="@color/colorSecondaryText"
        android:text="@string/meal_to_delete" />

    <Spinner
        android:id="@+id/mealToDeleteSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@+id/mealToDeleteTV"
        android:layout_marginTop="@dimen/margin_smaller" />

    <TextView
        android:id="@+id/deletedMealPreviewTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mealToDeleteSpinner"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="@dimen/margin_bigger"/>

    <Button
        android:id="@+id/saveAndDeleteMealBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deletedMealPreviewTV"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:onClick="click"
        android:text="@string/delete_and_save" />

    <Button
        android:id="@+id/cancelMealDeletionBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:onClick="click"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignBaseline="@+id/saveAndDeleteMealBtn"
        android:layout_alignBottom="@+id/saveAndDeleteMealBtn"
        android:layout_alignParentEnd="true" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mealToDeleteSpinner">

        <TextView
            android:id="@+id/dayDietTV"
            android:layout_width="match_parent"
            android:textColor="@color/colorSecondaryText"
            android:layout_height="wrap_content"
             />
    </ScrollView>


</RelativeLayout>
