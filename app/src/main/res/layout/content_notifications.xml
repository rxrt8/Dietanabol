<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rxrt8.dietanabol.NotificationsActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_notifications">


    <Button
        android:id="@+id/addNewNotificationBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_bigger"
        android:text="@string/add_new_notification" />

    <Button
        android:id="@+id/deleteNotificationBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addNewNotificationBtn"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimaryText"
        android:text="@string/delete_notifications" />

    <ListView
        android:id="@+id/notificationsLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_bigger"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@+id/addNewNotificationBtn" />

</RelativeLayout>
