<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rxrt8.dietanabol.ProductsActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_products">

    <Button
        android:id="@+id/addProductBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/add_product"
        android:textColor="@color/colorPrimaryText"
        android:onClick="click" />

    <Button
        android:id="@+id/deleteProductBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimaryText"
        android:onClick="click"
        android:text="@string/delete_product" />

    <TextView
        android:id="@+id/productToDeleteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorSecondaryText"
        android:layout_below="@+id/addProductBtn"
        android:layout_marginTop="@dimen/margin_bigger"
        android:text="@string/product_to_delete" />

    <Spinner
        android:id="@+id/productToDeleteSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="@dimen/margin_smaller"
        android:layout_below="@+id/productToDeleteTV" />

    <Button
        android:id="@+id/saveAndDeleteProductBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_bigger"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@+id/productToDeleteSpinner"
        android:layout_alignParentStart="true"
        android:onClick="click"
        android:text="@string/delete_and_save" />

    <Button
        android:id="@+id/cancelProductDeletionBtn"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:onClick="click"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignBaseline="@+id/saveAndDeleteProductBtn"
        android:layout_alignBottom="@+id/saveAndDeleteProductBtn"
        android:layout_alignParentEnd="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/productToDeleteSpinner"
        android:layout_marginTop="@dimen/margin_bigger"
        android:id="@+id/ProductsSV">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productsIDTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_weight="1"
                android:text="@string/product_ID" />


            <TextView
                android:id="@+id/productsNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/product_name" />

            <TextView
                android:id="@+id/productsGramsOrPiecesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_weight="1"
                android:text="@string/product_grams_or_pieces" />

            <TextView
                android:id="@+id/productsIsRegularlyPurchasedTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_weight="1"
                android:text="@string/product_is_regularly_purchased" />

            <TextView
                android:id="@+id/productsQuantityTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:layout_weight="1"
                android:text="@string/product_quantity" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
